  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/validate-php-documentation.sh \"$CLAUDE_TOOL_ARGS\" \"created/modified\"",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/validate-php-documentation.sh \"$CLAUDE_TOOL_ARGS\" \"edited\"",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "MultiEdit",
