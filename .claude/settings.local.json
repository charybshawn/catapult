          {
            "type": "command",
            "command": "./.claude/hooks/validate-php-documentation.sh \"$CLAUDE_TOOL_ARGS\" \"batch-edited\"",
            "timeout": 15
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
